+def logout_required(func):
+    @wraps(func)
+    def decorated_function(*args, **kwargs):
+        if current_user.is_authenticated:
+            flash('You are already authenticated.', 'info')
+            return redirect(url_for('index'))
+        return func(*args, **kwargs)
+
